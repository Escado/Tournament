@page
@model RazorPageTest.Pages.StatsModel

@{
    ViewData["Title"] = "Stats";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Nickname
            </th>
            <th>
                Score
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Statistics.Scores.OrderByDescending(x => x.Score))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nickname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Score)
                </td>
            </tr>
        }
    </tbody>
</table>
